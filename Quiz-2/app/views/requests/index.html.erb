<div class="container">

  <h1>Support Requests</h1>
  <br>

  <div>
    <%= form_tag(requests_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
    <% end %>
  </div>

  <div>
    <% if @requests.present? %>
      <% @requests %>
    <% else %>
      <p>There are no Request containing the term(s) <%= params[:search] %>.</p>
    <% end %>
  </div>
  <br>

  <table class="table table-bordered">
    <tr>
      <td>#</td>
      <td>Name</td>
      <td>Email</td>
      <td>Department</td>
      <td>Message</td>
      <td>Actions</td>
    </tr>
    <% @requests.each do |p|%>
    <tr>
      <td><%= link_to p.id, request_path(p) %></td>
      <td><%= link_to p.name, request_path(p) %></td>
      <td><%= link_to p.email, request_path(p) %></td>
      <td><%= link_to p.department, request_path(p) %></td>
      <td><%= link_to p.message, request_path(p) %></td>
      <td>
        <%= link_to p.actions, edit_request_path(p)%> <hr>
        <%= link_to "Edit", edit_request_path(p)%><br>
        <%= link_to "Delete", request_path(p),
                            method: :delete,
                            data: {confirm: 'Are you sure you want to delete this request?'}%>
      </td>
    </tr>
    <%end%>
  </table>
  <div class="container" id="pag">
    <%= will_paginate @requests %>
  </div>
</div>
